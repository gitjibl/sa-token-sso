<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.admin.mapper.SysRoleMenuMapper">

    <resultMap id="BaseResultMap" type="com.example.admin.domain.SysRoleMenu">
        <id property="roleId" column="role_id" jdbcType="INTEGER"/>
        <id property="menuId" column="menu_id" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        role_id
        ,menu_id
    </sql>
    <insert id="insertRoleMenuBatch">
        insert into sys_role_menu(role_id, menu_id) values
        <foreach item="item" index="index" collection="list" separator=",">
            (#{item.roleId},#{item.menuId})
        </foreach>
    </insert>
    <delete id="deleteRoleMenuBatch">
        delete from sys_role_menu where role_id in
        <foreach collection="list" item="roleId" open="(" separator="," close=")">
            #{roleId}
        </foreach>
    </delete>

</mapper>
